<Page x:Class="PiMusic.Navbar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PiMusic"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Navbar">

    <Grid>
        <Grid x:Name="BarBG" Height="4" Width="100" VerticalAlignment="Bottom" Margin="0,0,0,5">
            <Border x:Name="BorderBG" Background="Black" CornerRadius="2" Opacity="0.7"/>
            <Image RenderOptions.BitmapScalingMode="HighQuality" Name="Back" Width="40" Height="40" Source="/Assets/Icons/Light/Back.png" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-5,5,0,0"/>
        </Grid>
        <Button Click="HomePress_Click"  x:Name="HomePress" Opacity="0" IsEnabled="True" Height="15" Width="150" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
